<Window x:Class="MikroHotel.room.RoomWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikroHotel.room"
        mc:Ignorable="d"
        Title="Lista pokoi" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListView Name="ListView1" Margin="5" Grid.Column="0" ItemsSource="{Binding RoomList}">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Numer pokoju" DisplayMemberBinding="{Binding number}"/>
                    <GridViewColumn Header="Ile osobowy" DisplayMemberBinding="{Binding people}"/>
                    <GridViewColumn Header="Typ" DisplayMemberBinding="{Binding id}"/>
                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding description}"/>
                </GridView>
            </ListView.View>
        </ListView>
    </Grid>
</Window>
