<Window x:Class="MikroHotel.about.AboutWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikroHotel.about"
        mc:Ignorable="d"
        Title="O programie" Height="200" Width="400">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="1*"/>
            <ColumnDefinition Width="4*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="1*"/>
            <RowDefinition Height="5*"/>
            <RowDefinition Height="1*"/>
        </Grid.RowDefinitions>

        <StackPanel Grid.Column="1" Grid.Row="1" Background="#FFF3CBCB">
            <Label Name="title" Content="MikroHotel" FontSize="16" HorizontalAlignment="Center" VerticalAlignment="Top" />
            <Label Name="label1" Content="Autor: Marcin Antolak" FontSize="12" HorizontalAlignment="Center"/>
            <Label Name="label2" Content="2016" FontSize="12" HorizontalAlignment="Center"/>
            <Label Name="label3" Content="Projekt wykonany na Akademie C#" FontSize="12" HorizontalAlignment="Center"/>
        </StackPanel>
    </Grid>
</Window>
