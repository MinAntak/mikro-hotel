<Window x:Class="MikroHotel.guest.GuestWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:MikroHotel.guest"
        xmlns:util="clr-namespace:Wpf.Util"
        mc:Ignorable="d"
        Title="GuestWindow" Height="600" Width="800">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="5*"/>
            <ColumnDefinition Width="1*"/>
        </Grid.ColumnDefinitions>

        <ListView Name="ListView1" Margin="5" Grid.Column="0" ItemsSource="{Binding GuestList}" IsSynchronizedWithCurrentItem="True" util:GridViewSort.AutoSort="True">
            <ListView.View>
                <GridView>
                    <GridViewColumn Header="Numer pokoju" 
                                    DisplayMemberBinding="{Binding Number}" util:GridViewSort.PropertyName="Number"/>
                    <GridViewColumn Header="Status" DisplayMemberBinding="{Binding Vacant}" util:GridViewSort.PropertyName="Vacant"/>
                    <GridViewColumn Header="Nazwisko" DisplayMemberBinding="{Binding RoomGuest.Surname}" util:GridViewSort.PropertyName="RoomGuest.Surname"/>
                    <GridViewColumn Header="Imie" DisplayMemberBinding="{Binding RoomGuest.Name}" util:GridViewSort.PropertyName="RoomGuest.Name"/>
                    <GridViewColumn Header="Telefon" DisplayMemberBinding="{Binding RoomGuest.Phone}" util:GridViewSort.PropertyName="RoomGuest.Phone"/>
                    <GridViewColumn Header="Przyjazd" DisplayMemberBinding="{Binding RoomGuest.CheckIn}" util:GridViewSort.PropertyName="RoomGuest.CheckIn"/>
                    <GridViewColumn Header="Odjazd" DisplayMemberBinding="{Binding RoomGuest.CheckOut}" util:GridViewSort.PropertyName="RoomGuest.CheckOut"/>
                    <GridViewColumn Header="Opis" DisplayMemberBinding="{Binding RoomGuest.Description}" util:GridViewSort.PropertyName="RoomGuest.Description"/>
                </GridView>
            </ListView.View>
        </ListView>
        <Grid Column="1">
            <StackPanel>
                <Button Name="button1" Content="Dodaj gościa" Click="Button1_OnClick" Height="30" Width="100" VerticalAlignment="Top" Margin="10"/>
                <Button Name="button2" Content="Dodaj rezerwacje" Click="Button2_OnClick" Height="30" Width="100" VerticalAlignment="Top" Margin="10"/>
                <Button Name="button3" Content="Wymelduj" Click="Button3_OnClick" Height="30" Width="100" VerticalAlignment="Top" Margin="10"/>
                <Button Name="button4" Content="Zamelduj rez." Click="Button4_OnClick" Height="30" Width="100" VerticalAlignment="Top" Margin="10"/>
                <Button Name="button5" Content="Edytuj" Click="Button5_OnClick" Height="30" Width="100" VerticalAlignment="Top" Margin="10"/>

            </StackPanel>
        </Grid>
    </Grid>
</Window>
